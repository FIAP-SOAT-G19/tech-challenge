{
  "openapi": "3.0.0",
  "info": {
    "title": "Tech-Challenge",
    "description": "API desenvolvida durante a pos tech da FIAP",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/api/v1"
    }
  ],
  "tags": [
    {
      "name": "Healthcheck"
    }
  ],
  "paths": {
    "/healthcheck": {
      "get": {
        "tags": [
          "Healthcheck"
        ],
        "description": "Rota de Healthcheck da API",
        "summary": "Retorna status da API",
        "responses": {
          "200": {
            "description": "Online",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "OK"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/employee" : {
      "post": {
        "tags": [
          "Employees"
        ],
        "description": "Rota de criação de funcionário",
        "summary": "Cria um funcionário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "name": "John Doe",
                  "email": "john.doe@email.com",
                  "cpf": "12345678900",
                  "password": "123456"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "id": "3a51ed19-316a-4b05-8f0e-5b691abad994"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação da solicitação",
            "content": {
              "application/json": {
                "example": {
                  "error": "InvalidParamError",
                  "message": "Invalid param: The 'password' field is required."
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "example": {
                  "error": "Internal Server Error"
                }
              }
            }
          }
        }
      }
    },
    "/employees": {
      "get": {
        "tags": [
          "Employees"
        ],
        "description": "Rota de listagem de funcionários",
        "summary": "Retorna lista de funcionários",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "example": {
                    "employees": [
                      {
                        "id": "3a51ed19-316a-4b05-8f0e-5b691abad994",
                        "name": "John Doe",
                        "email": "john.doe@email.com",
                        "cpf": "12345678900",
                        "createdAt": "2023-10-12T21:44:36.423Z",
                        "updatedAt": "2023-10-12T21:44:36.423Z"
                      },
                      {
                        "id": "e5b5b3c7-59a6-4ed9-b13b-1af23757199e",
                        "name": "Nome do Funcionário 5",
                        "email": "email6@example.com",
                        "cpf": "12345678901",
                        "createdAt": "2023-10-12T21:50:51.553Z",
                        "updatedAt": "2023-10-12T21:50:51.553Z"
                      }
                    ]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "example": {
                  "error": "Internal Server Error"
                }
              }
            }
          }
        }
      }
    },
    "/employee/{id}": {
      "get": {
        "tags": [
          "Employees"
        ],
        "description": "Rota de busca de funcionário",
        "summary": "Retorna um funcionário",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "Id do funcionário",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "employee": {
                      "id": "3a51ed19-316a-4b05-8f0e-5b691abad994",
                      "name": "John Doe",
                      "email": "john.doe@email.com",
                      "cpf": "12345678900",
                      "createdAt": "2023-10-12T21:44:36.423Z",
                      "updatedAt": "2023-10-12T21:44:36.423Z"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "example": {
                  "error": "Internal Server Error"
                }
              }
            }
          }
        }
      }
    },
    "/employee/{id_}": {
      "patch": {
        "tags": [
          "Employees"
        ],
        "description": "Rota de atualização de funcionário, todos os campos são opcionais",
        "summary": "Atualiza um funcionário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "name": "John Doe II",
                  "email": "john.doeII@email.com",
                  "cpf": "12345678900",
                  "password": "123456"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "in": "path",
            "name": "id_",
            "description": "Id do funcionário",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "idEmployee": "aee78fe2-9ea3-4f73-aae4-f7cb3f16e972"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação da solicitação",
            "content": {
              "application/json": {
                "example": {
                  "error": "InvalidParamError",
                  "message": "Invalid param: Employee not found"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "example": {
                  "error": "Internal Server Error"
                }
              }
            }
          }
        }
      }
    },
    "/employee/{_id}": {
      "delete": {
        "tags": [
          "Employees"
        ],
        "description": "Rota de remoção de funcionário",
        "summary": "Remove um funcionário",
        "parameters": [
          {
            "in": "path",
            "name": "_id",
            "description": "Id do funcionário",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {}
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação da solicitação",
            "content": {
              "application/json": {
                "example": {
                    "error": "InvalidParamError",
                    "message": "Invalid param: Employee not found"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "example": {
                  "error": "Internal Server Error"
                }
              }
            }
          }
        }
      }
    }
  }
}
