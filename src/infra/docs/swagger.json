{
  "openapi": "3.0.0",
  "info": {
    "title": "Tech-Challenge",
    "description": "API desenvolvida durante a pos tech da FIAP",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/api/v1"
    }
  ],
  "tags": [
    {
      "name": "Healthcheck"
    }
  ],
  "paths": {
    "/healthcheck": {
      "get": {
        "tags": [
          "Healthcheck"
        ],
        "description": "Rota de Healthcheck da API",
        "summary": "Retorna status da API",
        "responses": {
          "200": {
            "description": "Online",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "OK"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "post": {
        "tags": [
          "Products"
        ],
        "description": "Rota de Products da API",
        "summary": "Criar os Produtos da API",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Coca Cola"
                  },
                  "category": {
                    "type": "string",
                    "example": "drink"
                  },
                  "price": {
                    "type": "number",
                    "example": "4"
                  },
                  "description": {
                    "type": "string",
                    "example": "Beverage description"
                  },
                  "image": {
                    "type": "string",
                    "example": "http://host.com/image"
                  }
                },
                "required": [
                  "name",
                  "category",
                  "price",
                  "description",
                  "image"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Produto adicionado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "productId": {
                      "type": "string",
                      "example": "5ebcea6f-2391-46aa-a5bc-ab5d98527f13"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Missing param: product name"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Products"
        ],
        "description": "Rota de Products da API",
        "summary": "Retorna os Produtos da API",
        "responses": {
          "200": {
            "description": "Produtos retornados com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "example": "5ebcea6f-2391-46aa-a5bc-ab5d98527f13"
                      },
                      "name": {
                        "type": "string",
                        "example": "Coca Cola"
                      },
                      "category": {
                        "type": "string",
                        "example": "drink"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/{productId}": {
      "get": {
        "tags": [
          "Products"
        ],
        "description": "Rota de Products da API",
        "summary": "Retorna as informações de um Produto da API",
        "parameters":[
          {
            "in": "path",
            "name": "productId",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "ID do produto"
          }],
        "responses": {
          "200": {
            "description": "Informações do Produto retornadas com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "5ebcea6f-2391-46aa-a5bc-ab5d98527f13"
                    },
                    "name": {
                      "type": "string",
                      "example": "Coca Cola"
                    },
                    "category": {
                      "type": "string",
                      "example": "drink"
                    },
                    "price": {
                      "type": "number",
                      "example": "6"
                    },
                    "description": {
                      "type": "string",
                      "example": "Drink description"
                    },
                    "image": {
                      "type": "string",
                      "example": "http://host.com/image"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Product not found error"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "patch": {
        "tags": [
          "Products"
        ],
        "description": "Rota de Products da API",
        "summary": "Atualiza as informações de um Produto da API",
        "parameters":[
          {
            "in": "path",
            "name": "productId",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "ID do produto"
          }],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "example": "Coca Cola"
                    },
                    "description": {
                      "type": "string",
                      "example": "Updated description"
                    }
                  }
                }
              }
            }
          },
        "responses": {
          "200": {
            "description": "Atualização da informação do Produto realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "5ebcea6f-2391-46aa-a5bc-ab5d98527f13"
                    },
                    "name": {
                      "type": "string",
                      "example": "Coca Cola"
                    },
                    "category": {
                      "type": "string",
                      "example": "drink"
                    },
                    "price": {
                      "type": "number",
                      "example": "6"
                    },
                    "description": {
                      "type": "string",
                      "example": "Updated description"
                    },
                    "image": {
                      "type": "string",
                      "example": "http://host.com/image"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Product not found error"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Products"
        ],
        "description": "Rota de Products da API",
        "summary": "Deleta um Produto da API",
        "parameters":[
          {
            "in": "path",
            "name": "productId",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "ID do produto"
          }],
        "responses": {
          "200": {
            "description": "Produto deletado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Product deleted"
                    },
                    "productId": {
                      "type": "string",
                      "example": "ca97b811-a559-44b0-b3b0-1a9a84309aef"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Product not found error"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/category/{category}": {
      "get": {
        "tags": [
          "Products"
        ],
        "description": "Rota de Products da API",
        "summary": "Retorna os Produto de uma determinada categoria da API",
        "parameters":[
          {
            "in": "path",
            "name": "category",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Categoria do produto"
          }],
        "responses": {
          "200": {
            "description": "Produtos da categoria retornadas com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "example": "5ebcea6f-2391-46aa-a5bc-ab5d98527f13"
                      },
                      "name": {
                        "type": "string",
                        "example": "Coca Cola"
                      },
                      "category": {
                        "type": "string",
                        "example": "drink"
                      },
                      "price": {
                        "type": "number",
                        "example": "6"
                      },
                      "description": {
                        "type": "string",
                        "example": "Drink description"
                      },
                      "image": {
                        "type": "string",
                        "example": "http://host.com/image"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Product not found error"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}